# Environment Configuration
COMPOSE_PROJECT_NAME=ecommerce-stacks
# Set APPDATA for Windows (will be ignored on non-Windows systems)
APPDATA=%APPDATA%

# API Gateway Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000;https://localhost:5001
KESTREL_CERT_PASSWORD=password

# PostgreSQL Configuration
POSTGRES_DB=ecommerce_db
POSTGRES_USER=ecommerce_user
POSTGRES_PASSWORD=ecommerce_password
POSTGRES_PORT=5432

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin_password
MONGO_INITDB_DATABASE=ecommerce_mongo
MONGO_PORT=27017

# Redis Configuration
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# Kafka Configuration
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181

# LocalStack Configuration
LOCALSTACK_PORT=4566
LOCALSTACK_DEBUG=1
LOCALSTACK_SERVICES=s3,sqs,sns,dynamodb,lambda,apigateway,cloudformation

# Network Configuration
NETWORK_NAME=ecommerce-network

# Volume Configuration
POSTGRES_DATA_PATH=./data/postgres
MONGO_DATA_PATH=./data/mongo
REDIS_DATA_PATH=./data/redis
KAFKA_DATA_PATH=./data/kafka
LOCALSTACK_DATA_PATH=./data/localstack
